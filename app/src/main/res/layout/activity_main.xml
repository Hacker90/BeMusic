<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nulldreams.bemusic.MainActivity">
    <RelativeLayout
        android:id="@+id/main_mini_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?actionBarSize"
        android:layout_alignParentBottom="true"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/colorPrimary"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/main_mini_thumb"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            />
        <ImageView
            android:id="@+id/main_mini_control_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="16dp"
            app:srcCompat="@drawable/ic_play_pause_sel"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/main_mini_thumb"
            android:layout_toLeftOf="@+id/main_mini_control_btn"
            android:layout_centerVertical="true"
            >
            <TextView
                android:id="@+id/main_mini_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@android:color/white"
                android:maxLines="1"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/main_mini_artist_album"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@android:color/white"
                android:maxLines="1"
                android:ellipsize="end"
                />
        </LinearLayout>

    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/main_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/main_mini_panel"
        android:layout_alignWithParentIfMissing="true"
        />
</RelativeLayout>
